@model DiveO.Models.Diver

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Diver</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h4>Name</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <h4>Profile Pic</h4>
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.ProfilePic)*@
            @{
                var base64 = Convert.ToBase64String(Model.ProfilePic);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgSrc" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Certification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Certification)
        </dd>
    </dl>
   
</div>
<p>
    @Html.ActionLink("Dive Log", "Index", "Dive")
    @Html.ActionLink("Add A Dive", "Create", "Dive", new { id = Model.Id }, null) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
