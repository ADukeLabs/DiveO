@using DiveO.Services
@model DiveO.ViewModels.DiverViewModel

<div class="container">
    <div class="row">
        <div class="well col-sm-8 col-sm-offset-2">
            <div class="content">
                <div class="col-sm-4">
                    @{
                        var img = new ImageProcessor().ByteToImage(Model.ProfilePic);
                    }
                    <img src="@img" class="img-rounded" width="110" height="110" style="display: inline-block" />
                    <h3 style="display: inline-block">@Html.DisplayFor(model => model.Name)</h3>
                </div>
                <div class="col-sm-6">
                    <h3>About Me</h3>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
        </div>
     </div>

      <div class="row">
          <div class="well col-sm-8 col-sm-offset-2">
              <div class="content">
                  <div class="col-sm-4">
                      <h6>Home Base</h6>
                      <p>@Html.DisplayFor(model => model.HomeBase)</p>
                  </div>
                  <div class="col-sm-4">
                      <h6>Certification Level</h6>
                      <p>@Html.DisplayFor(model => model.Certification)</p>
                  </div>
                  <div class="col-sm-8">
                    <button class="btn btn-primary">@Html.ActionLink("Dive Log", "DiveLog", "Dive", new { id = Model.Id }, null)</button>
                    <button class="btn btn-primary">@Html.ActionLink("Add A Dive", "Create", "Dive", new { id = Model.Id }, null)</button>
                  </div>
              </div>
          </div>
      </div>




