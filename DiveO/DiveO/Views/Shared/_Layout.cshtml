<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*<script type="text/javascript" src="https://maps.google.com/maps/api/js?key=AIzaSyAsgBZrYs3xpDSqC3F5cIZQMhsQkTwjJgY"></script>
    <script type="text/javascript" src="/Scripts/MapJs.js"></script>*@

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DiveO", "Feed", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Feed", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="container body-content">
            <div class="jumbotron col-md-8 col-md-offset-2">
                @*<div id="wrapper">
                    <div id="sidebar-wrapper">
                        <ul class="sidebar-nav col-md-3">
                            <li>@Html.ActionLink("Feed", "Feed", "Home")</li>

                            <li>@Html.ActionLink("Dives", "Index", "Dive")</li>

                        </ul>
                    </div>
                </div>*@

                <nav class="navbar navbar-inverse" id="sidebar-wrapper" role="navigation">
                    <ul class="nav sidebar-nav">
                        <li>Feed</li>
                        <li>Page</li>
                        <li>Dives</li>
                        <li>Friends</li>
                    </ul>
                </nav>
                <div class="content-box col-md-8">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>


    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Alex Duke Software Developer</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
