@using DiveO.Services
@model DiveO.ViewModels.DiveViewModel

    <div class="content-box">
        <div class="container">
            <div class="row">
                <div id="user-name">
                    @{ 
                        var img = new ImageProcessor().ByteToImage(Model.Diver.ProfilePic);
                    }
                    <img src="@img" class="img-circle" width="60" height="60" style="display: inline-block" />
                    <h3 style="display: inline-block">@Html.DisplayFor(model => model.Diver.Name)</h3>
                </div>
            </div>
            @foreach (var item in Model.DiveList)
            {
                <div class="row">
                    <div class="user-dive-log col-sm-6">
                        <p>@Html.Display(item.DiveSite)</p>
                        <p>@Html.Display(item.Location)</p>
                    </div>
                </div>
            } 
        </div>
    </div>